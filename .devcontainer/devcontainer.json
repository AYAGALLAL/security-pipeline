{
  "name": "Ona Terraform / AWS (Minimal)",

  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",

  "features": {
    // AWS CLI v2
    "ghcr.io/devcontainers/features/aws-cli:1": {
      "version": "latest"
    },

    // Terraform 
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "1.7.5",
      "tflint": "none",
      "terragrunt": "none"
    }
  },

  // Extra small tools you want
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y tree jq unzip",

  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "AmazonWebServices.aws-toolkit-vscode"
      ]
    }
  }
}

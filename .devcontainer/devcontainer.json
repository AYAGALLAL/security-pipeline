// .devcontainer/devcontainer.json
{
  "name": "Ona Terraform/AWS workspace",

  // Base image
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",

  // Devcontainer Features to install tools
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/aws-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "1.7.5",
      "tflint": "none",
      "terragrunt": "none"
    }
  },

  // Environment
  "containerEnv": {
    "AWS_CLI_AUTO_PROMPT": "on-partial",
    "AWS_PAGER": ""
  },

  // Run once after container is created
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y tree jq unzip && mkdir -p /workspace/.aws && echo 'export AWS_SHARED_CREDENTIALS_FILE=/workspace/.aws/credentials' >> $HOME/.bashrc && echo 'export AWS_CONFIG_FILE=/workspace/.aws/config' >> $HOME/.bashrc",

  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "AmazonWebServices.aws-toolkit-vscode",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "redhat.ansible"
      ]
    }
  }
}
